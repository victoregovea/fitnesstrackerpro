
  <div class="container">
    <h2> Sign Up </h2>
    
    {{#if errorMessage}}
      <p class="error-message">
        {{ errorMessage }}
      </p>
    {{/if}}
    
    <form action="/signup" method="post">
      <div>
        <label for="name-input"> Name </label>
        <input class="form-control" type="text" name="name" id="name-input"
          placeholder="e.g., Diana Prince">
      </div>
    
      <div>
        <label for="email-input"> Email </label>
        <input class="form-control" type="email" name="email" id="email-input"
          placeholder="e.g., diana@themyscira.agency">
      </div>
    
      <div>
        <label for="password-input"> Password </label>
        <input  class="form-control" type="password" name="password" id="password-input"
          placeholder="e.g., ••••••••••••">
      </div>
      
    <div>
      <label for="password-input">Sex</label>
         <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="sex" id="inlineRadio1" value="Masculine">
    <label class="form-check-label" for="inlineRadio1">M</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="sex" id="inlineRadio2" value="Femenine">
    <label class="form-check-label" for="inlineRadio2">F</label>
  </div>
    </div>
    
      <div>
        <button> Create New Account </button>
        </div>
      
    </form>
    
    <p>
      Already have an account?
      <a href="/login">
        Log in.
      </a>
    </p>

  </div> 